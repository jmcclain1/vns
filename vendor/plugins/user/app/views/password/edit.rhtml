<%= error_messages_for 'user' %>
<% form_for :user, @user, :url => password_url(@user), :html => { :method => :put } do |f| %>
    <p><label for="user_password">Current Password</label><br/>
    <%= f.password_field 'current_password'  %></p>
    
    <p><label for="user_password">New Password</label><br/>
    <%= f.password_field 'password'  %></p>
    
    <p><label for="user_password">Confirm Password</label><br/>
    <%= f.password_field 'password_confirmation'  %></p>
    
    <%= submit_tag "Change Password" %>
<% end %>




