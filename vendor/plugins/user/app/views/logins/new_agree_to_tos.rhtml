<% @page_title = 'Log in' %>
<%= error_messages_for :user %>

<% if @request_new_validation %>
  Or click <%= link_to "here", user_validation_requests_url(:id => @user.to_param), {:method => 'post'} %> to send a new validation email.
<% end %>

<h2>Log in</h2>
<% form_for :user, :url => logins_url do |f| -%>

  <p><label for="email_address">Email Address or Unique Name</label><br/>
    <%= f.text_field :email_address %></p>

  <p><label for="password">Password</label><br/>
    <%= f.password_field :password %></p>

  Check this box if you accept the <%= link_to 'terms of service', terms_of_service_url %>: 
    <%= f.check_box :accept_terms_of_service, :id => 'accept_terms_of_service' %><br/>

  <%= link_to "Forgot your password?", new_password_reset_request_url %>

  <p><label for="auto_login"><%= check_box_tag 'auto_login' %> Remember Me</label></p>
  <p><%= submit_tag 'Log in', :name => 'log_in', :id => "login_button" %></p>
<% end -%>

